@page "/"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
@namespace BlazorDesktopTest.Pages

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorDesktopTest</title>
    <base href="~/" />
    <link rel="stylesheet" href="_content/WebviewAppShared/css/bootstrap/bootstrap.min.css" />
    <link href="_content/WebviewAppShared/css/site.css" rel="stylesheet" />
    <link href="BlazorDesktopTest.styles.css" rel="stylesheet" />

    <!-- for water demo page -->
    <script src="_content/WebviewAppShared/water/OES_texture_float_linear-polyfill.js"></script>
    <script src="_content/WebviewAppShared/water/lightgl.js"></script>
    <script src="_content/WebviewAppShared/water/cubemap.js"></script>
    <script src="_content/WebviewAppShared/water/renderer.js"></script>
    <script src="_content/WebviewAppShared/water/water.js"></script>
    <script src="_content/WebviewAppShared/water/main.js"></script>


</head>
<body>
    <!-- water demo -->
    <img id="tiles" style="display: none" src="_content/WebviewAppShared/water/tiles.jpg">
    <img id="xneg" style="display: none"  src="_content/WebviewAppShared/water/xneg.jpg">
    <img id="xpos" style="display: none"  src="_content/WebviewAppShared/water/xpos.jpg">
    <img id="ypos" style="display: none"  src="_content/WebviewAppShared/water/ypos.jpg">
    <img id="zneg" style="display: none"  src="_content/WebviewAppShared/water/zneg.jpg">
    <img id="zpos" style="display: none"  src="_content/WebviewAppShared/water/zpos.jpg">

    <component type="typeof(WebviewAppShared.App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
